<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/circleprogressbar_gravity" />

    <RadioGroup
        android:id="@+id/cpb_rg_gravity_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/cpb_rb_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/circleprogressbar_gravity_left" />

        <RadioButton
            android:id="@+id/cpb_rb_center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/circleprogressbar_gravity_center_horizontal" />

        <RadioButton
            android:id="@+id/cpb_rb_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/circleprogressbar_gravity_right" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/cpb_rg_gravity_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/cpb_rb_center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/circleprogressbar_gravity_center_vertical" />

        <RadioButton
            android:id="@+id/cpb_rb_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/circleprogressbar_gravity_center" />

        <RadioButton
            android:id="@+id/cpb_rb_center_vertical_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/circleprogressbar_gravity_center_vertical_right" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/cpb_rg_gravity_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/cpb_rb_bottom_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/circleprogressbar_gravity_bottom_left" />

        <RadioButton
            android:id="@+id/cpb_rb_bottom_center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/circleprogressbar_gravity_bottom_center_horizontal" />

        <RadioButton
            android:id="@+id/cpb_rb_bottom_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/circleprogressbar_gravity_bottom_right" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/circleprogressbar_radius" />

    <SeekBar
        android:id="@+id/cpb_sb_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="60" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/circleprogressbar_scale_type" />

    <RadioGroup
        android:id="@+id/cpb_rg_scale_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/cpb_rb_type_none"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/circleprogressbar_scale_type_none" />

        <RadioButton
            android:id="@+id/cpb_rb_type_inside"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/circleprogressbar_scale_type_inside" />

        <RadioButton
            android:id="@+id/cpb_rb_type_crop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/circleprogressbar_scale_type_crop" />

        <RadioButton
            android:id="@+id/cpb_rb_type_inside_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/circleprogressbar_scale_type_inside_crop" />
    </RadioGroup>


</LinearLayout>